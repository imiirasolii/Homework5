{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "https://raw.githubusercontent.com/imiirasolii/Homework5/main/Homework5/Data/z.csv"},
    "vconcat": [
      {
      "width": 500,
      "height": 60,
      "mark": "line",
      "params": [{
        "name": "brush",
        "select": {"type": "interval", "encodings": ["x"]}
      }],
      "encoding": {
        "x": {
          "field": "z",
          "type": "temporal"
        },
        "y": {
          "aggregate": "sum",
        "field": "Count of Accidents",
          "type": "quantitative",
          "axis": {"tickCount": 3, "grid": false}
        }
  }
      },{
      "width": 500,
      "height": 300,
      "mark": "area",
      "encoding": {
        "x": {
          "field": "z",
          "type": "temporal",
          "scale": {"domain": {"param": "brush"}},
          "axis": {"title": ""}
        },
        "y": {"aggregate": "sum",
        "field": "Count of Accidents",
         "type": "quantitative"}
      }
    },
      {
    "width": 500,
    "height": 300,
    "mark": "line",
    "params": [{
    "name": "Loss Type",
    "select": {"type": "point", "fields": ["Type of Loss"]},
    "bind": "legend"
                }],
    "encoding": {
      "x": {
        "field": "z",
        "type": "temporal",
        "axis": {"title":""},
        "scale": {"domain": {"param": "brush"}}
      },
      "y": {"field":"Count of Accidents","type": "quantitative","title": "Count"},
      "color": {
        "field": "Type of Loss"
      },
        "opacity": {
            "condition": {"param": "Loss Type", "value": 1},
            "value": 0.0
        },
      "tooltip": [
        {"field": "z", "type":"temporal"},
        {"field": "Count of Accidents"},
        {"field":"time", "timeUnit":"yearmonth"}
      ]}
    }
    ]
  }
