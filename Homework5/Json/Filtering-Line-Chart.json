{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "https://raw.githubusercontent.com/imiirasolii/Homework5/main/Homework5/Data/z.csv"},
    "vconcat": [{
      "width": 500,
      "mark": "area",
      "encoding": {
        "x": {
          "field": "p",
          "type": "temporal",
          "scale": {"domain": {"param": "brush"}},
          "axis": {"title": ""}
        },
        "y": {"field": "Accident",
         "type": "quantitative"},
        "color": {
    "type": "nominal",
    "field": "Accident Count",
    "scale": {
    "range": ["#fd8d3c"]
    }
  }
      }
    }, {
      "width": 500,
      "height": 60,
      "mark": "line",
      "params": [{
        "name": "brush",
        "select": {"type": "interval", "encodings": ["x"]}
      }],
      "encoding": {
        "x": {
          "field": "p",
          "type": "temporal"
        },
        "y": {
          "field": "Accident",
          "type": "quantitative",
          "axis": {"tickCount": 3, "grid": false}
        },
        "color": {
    "type": "nominal",
    "field": "Accident Count",
    "scale": {
    "range": ["#fd8d3c"]
    }
  }
      }
    },
    {
      "width": 500,
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "z",
          "type": "temporal",
          "scale": {"domain": {"param": "brush"}},
          "axis": {"title": ""}
        },
        "y": {"field": "Count of Accidents",
         "type": "quantitative"},
      "color": {
        "type":"ordinal",
        "field": "Type of Loss",
        "scale": {"range": ["#675193", "#ca8861","#675193"]}
      }
    }
  }   
    ]
  }